<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/peliculas/editar_Peliculas/{{pelicula.idPelicula}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{pelicula.titulo}}" class="form-control" name="titulo" placeholder="Titulo De La Pelicula"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="informacionPelicula" rows="2" class="form-control"
                                placeholder="Informacion de la pelicula">{{pelicula.titulo}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{pelicula.duracionPelicula}}" name="duracionPelicula" class="form-control"
                                placeholder="Duracion de la pelicula (0h 00m)">
                        </div>
                        <div class="form-group">
                            <input type="date" value="{{pelicula.fechaEstreno}}" name="fechaEstreno" class="form-control" placeholder="Fecha de Estreno">
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{pelicula.foto}}" name="foto" class="form-control" placeholder="URL Foto">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>