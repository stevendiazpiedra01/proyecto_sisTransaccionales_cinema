
<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{titulo}}
                            </h3>
                        </a>
                        <p class="m-2">{{descripcion}}</p>
                        <p> {{timeago creado_el}} </p>
                        <a href="/links/eliminar/{{idLinks}}" class="btn btn-danger">Eliminar Link</a>
                        <a href="/links/editar/{{idLinks}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
                <br>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No Hay Links Creados Aun.</p>
                    <a href="/links/agregar">Crear Uno!</a>
                </div>
            </div>
            
        {{/each}}
    </div>
</div>
